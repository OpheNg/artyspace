<div class="container">
  <br>
  <%= link_to "Back", arts_path %>
  <div class="fullimg">
    <%= cl_image_tag @art.photo.key, class:"fullsize"%>
  </div>
  <p><%= @art.title %></p>
  <p><%= @art.description %></p>
  <p><%= @art.created_at %></p>
  <%= link_to "edit", edit_art_path(@art) %>
  <%= link_to "delete", art_path(@art), method: :delete, data:{confirm: "Are you sur you want to delete this post ?"} %>

  <br>
</div>

<%= link_to"Comment", new_art_review_path(@art) %>

<% @art.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.user.email %></p>
  <p><%= review.created_at %></p>
<% end %>

<div class="container">

  <div class="drawings-box gall">
    <h1>Drawings <span class="gtitle"> Gallery</span></h1>
    <br>
    <%= link_to "back", dashboard_path,class:"b"  %>
    <br>
    <div class="bloccc">
      <% allpaintings = Art.where(category: "drawing") %>
      <% allpaintings.each do |art| %>
         <div class="card-gall">
          <div class="frame">
            <%= link_to art_path(art) do %>
              <%= cl_image_tag art.photo.key, width:'300px', height:'300px'%>
            <% end %>
          </div>
          <p><%= art.title %></p>
          <p><%= art.user.email %></p>
        </div>

      <% end %>
    </div>
  </div>
</div>

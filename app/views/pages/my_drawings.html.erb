<div class="shadow">
  <div class="container">

      <div class="paintings-box gall">
        <h1>Digital paintings <span class="gtitle"> Gallery</span></h1>
        <br>
        <%= link_to "my galleries", arts_path ,class:"b" %>
        <br>
        <div class="bloccc">
          <% paintings = Art.where(category: "drawing") %>

          <% paintings.each do |art| %>
            <% if art.user == current_user %>

              <div class="card-gall">
                <div class="frame-draw">
                  <%= link_to art_path(art) do %>
                    <%= cl_image_tag art.photo.key, width:'300px', height:'300px'%>
                  <% end %>
                </div>
                <p><small style= "font-size:10px;">posted on <%= art.created_at.strftime("%d/%m/%Y") %> </small></p>

              </div>
            <% end %>

          <% end %>
        </div>
      </div>
    </div>

</div>
